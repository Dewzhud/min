--///////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
local Players = game:GetService("Players")
local TeleportService = game:GetService("TeleportService")

local deathPosition -- ‡∏ï‡∏≥‡πÅ‡∏´‡∏ô‡πà‡∏á‡∏ó‡∏µ‡πà‡∏ï‡∏≤‡∏¢

-- ‡πÄ‡∏°‡∏∑‡πà‡∏≠‡∏ú‡∏π‡πâ‡πÄ‡∏•‡πà‡∏ô‡πÄ‡∏Ç‡πâ‡∏≤‡∏™‡∏π‡πà‡πÄ‡∏Å‡∏°
Players.PlayerAdded:Connect(function(player)
    player.CharacterAdded:Connect(function(character)
        character:WaitForChild("Humanoid").Died:Connect(function()
            -- ‡πÄ‡∏°‡∏∑‡πà‡∏≠‡∏ú‡∏π‡πâ‡πÄ‡∏•‡πà‡∏ô‡∏ï‡∏≤‡∏¢
            if deathPosition then
                -- ‡∏ß‡∏≤‡∏õ‡∏ú‡∏π‡πâ‡πÄ‡∏•‡πà‡∏ô‡πÑ‡∏õ‡∏ó‡∏µ‡πà‡∏à‡∏∏‡∏î‡∏ï‡∏≤‡∏¢
                TeleportService:Teleport(deathPosition)
            else
                warn("‡πÑ‡∏°‡πà‡∏°‡∏µ‡∏ï‡∏≥‡πÅ‡∏´‡∏ô‡πà‡∏á‡∏ó‡∏µ‡πà‡∏ï‡∏≤‡∏¢")
            end
        end)
    end)
end)

-- ‡πÄ‡∏°‡∏∑‡πà‡∏≠‡∏Å‡∏î toggle
function toggle()
    _G.toggle = not _G.toggle -- ‡∏™‡∏•‡∏±‡∏ö‡∏™‡∏ñ‡∏≤‡∏ô‡∏∞‡∏Ç‡∏≠‡∏á toggle
    if _G.toggle then
        print("Toggle ‡πÄ‡∏õ‡∏¥‡∏î‡∏≠‡∏¢‡∏π‡πà")
        deathPosition = Vector3.new(0, 5, 0)
    else
        print("Toggle ‡∏õ‡∏¥‡∏î‡∏≠‡∏¢‡∏π‡πà")
        deathPosition = nil
    end
end

Tab:AddToggle({
    Name = "üíÄDeath Direct",
    Default = false,
    Callback = function(Value)
        toggle() -- ‡πÄ‡∏£‡∏µ‡∏¢‡∏Å‡∏ü‡∏±‡∏á‡∏Å‡πå‡∏ä‡∏±‡∏ô toggle ‡πÉ‡∏ô callback
    end    
})

